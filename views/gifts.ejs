  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
        <a class="navbar-brand" href="/">Surprise Box</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          Menu
          <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Главная страница</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/gifts">Выбор подарка</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contacts">Контакты</a>
            </li>

            <% if (email !== undefined) {%>
               <li class="nav-item">
               <a class="nav-link" href="/profile"><%=email%></a>
            </li>

              <%}%>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('static/img/gifts.jpg')">
      <div class="overlay"></div>
      <div class="container" style="text-align:center">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading" >
                 <!-- Триггер кнопка модали регистрации-->
                <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#ModalGifts">
                  Выбрать подарок
                </button>

                <!-- Модаль регистрации -->
                <div class="modal fade" id="ModalGifts" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header" style="color: black">
                       <h6>Поиск подарка</h6>
                      </div>
                      <form method="post" action="/yourgifts" style="color:black;">
                      </br>
                      Кому хотите подарить
                        <div class="col-md-12">
                          <select id="inputState" class="form-control" name="recipient">

                              <%for (i=0;i<recipient.length;i++){%>
                            <option><%=recipient[i].position%></option>
                              <%}%>
                            </select>
                        </div>
                        </br>
                      Чем увлекается

                        <div class="col-md-12">
                        <select id="inputState" class="form-control" name="hobby">
                           <option selected>Не выбрано</option>
                             <%for (i=0;i<hobby.length;i++){%>
                            <option><%=hobby[i].hobby%></option>
                              <%}%>
                            </select>
                        </div>
                        </br>
                      Какой повод


                        <div class="col-md-12">
                          <select id="inputState" class="form-control" name="celebration">
                             <%for (i=0;i<celebration.length;i++){%>
                            <option><%=celebration[i].name%></option>
                              <%}%>
                            </select>
                        </div>
                        <p><button type="submit" class="btn btn-primary"> Найти подарок </button></p>
                      </form>
                    </div>
                  </div>
                </div>


            </div>
          </div>
        </div>
      </div>
      </br></br>
    </header>

    <!-- Post Content -->


